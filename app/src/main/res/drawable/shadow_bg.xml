<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Couleur de fond du CardView -->
            <corners android:radius="20dp" /> <!-- Rayon des coins du CardView -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
            <corners android:radius="20dp" /> <!-- Rayon des coins du CardView -->
            <gradient
                android:angle="90"
            android:centerColor="#30000000" <!-- Couleur centrale de l'ombre -->
            android:endColor="#00000000" <!-- Couleur de l'ombre en haut -->
            android:startColor="#20000000" /> <!-- Couleur de l'ombre en bas -->
        </shape>
    </item>
</selector>